mixin card(img, figureTitle,resalt,datetime,date)
	.card
		.card__header
			figure
				img(data-src= `img/${img}`, alt=`${figureTitle}`, class="lazy").card__img
				figcaption.card__figcation
					.content
						if figureTitle
							h4.card__title--ocult= `${figureTitle}`
								span.card__figcation-title-resalt= `${resalt}`
						else
							h4.card__title--ocult
								span.card__figcation-title-resalt= `${resalt}`
						if date
							timer(datetime=`${datetime}`).card__date--ocult= `${date}`
- blocks = {}

mixin set(key)
	- blocks[key] = this.block


mixin cardArticle(img, figureTitle,resalt,datetime,date,title,blogger, datetimeArticle, dateArticle)
	article.card.article
				header.card__header
					figure
						img(data-src= `img/${img}`, alt=`${title}`, class="lazy").card__img
						if figureTitle || resalt || date
							figcaption.card__figcation
								.content
									h4.card__figcation-title= `${figureTitle}`
										span.card__figcation-title-resalt= `${resalt}`
									timer(datetime=`${datetime}`).card__date= `${date}`
				.card__body
					h1.card__title
						a(href="#").card__link= `${title}`
					block
					if blocks.contentBody
						- blocks.contentBody()
				footer.card__footer.d-flex
						if blocks.blogger
							- blocks.blogger()
						
						timer(datetime=`${datetimeArticle}`).article__date= `BY ${blogger} ${dateArticle}`

